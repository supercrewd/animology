.byob-wrapper {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */
}
.toggle-footer-icon {
   fill: {{ section.settings.button_color }};
}
.grid-product {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  grid-row-gap: 5px;
